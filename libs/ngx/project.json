{
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "library",
	"sourceRoot": "libs/ngx/src",
	"prefix": "tinyslice",
	"targets": {
		"build": {
			"executor": "@nrwl/angular:package",
			"outputs": ["dist/libs/ngx"],
			"options": {
				"project": "libs/ngx/ng-package.json"
			},
			"configurations": {
				"production": {
					"tsConfig": "libs/ngx/tsconfig.lib.prod.json"
				},
				"development": {
					"tsConfig": "libs/ngx/tsconfig.lib.json"
				}
			},
			"defaultConfiguration": "production"
		},
		"test": {
			"executor": "@nrwl/jest:jest",
			"outputs": ["coverage/libs/ngx"],
			"options": {
				"jestConfig": "libs/ngx/jest.config.ts",
				"passWithNoTests": true
			}
		},
		"lint": {
			"executor": "@nrwl/linter:eslint",
			"options": {
				"lintFilePatterns": ["libs/ngx/**/*.ts", "libs/ngx/**/*.html"]
			}
		}
	},
	"tags": []
}
