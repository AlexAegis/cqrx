{
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/hydration-plugin/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nrwl/js:tsc",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/libs/hydration-plugin",
				"main": "libs/hydration-plugin/src/index.ts",
				"tsConfig": "libs/hydration-plugin/tsconfig.lib.json",
				"assets": ["libs/hydration-plugin/*.md"]
			}
		},
		"publish": {
			"executor": "@nrwl/workspace:run-commands",
			"options": {
				"command": "node tools/scripts/publish.mjs hydration-plugin {args.ver} {args.tag}"
			},
			"dependsOn": [
				{
					"projects": "self",
					"target": "build"
				}
			]
		},
		"lint": {
			"executor": "@nrwl/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["libs/hydration-plugin/**/*.ts"]
			}
		},
		"test": {
			"executor": "@nrwl/jest:jest",
			"outputs": ["coverage/libs/hydration-plugin"],
			"options": {
				"jestConfig": "libs/hydration-plugin/jest.config.ts",
				"passWithNoTests": true
			}
		}
	},
	"tags": []
}
