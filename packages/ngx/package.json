{
	"name": "@tinyslice/ngx",
	"description": "Angular wrapper for TinySlice",
	"version": "0.7.0",
	"license": "MIT",
	"private": false,
	"archetype": {
		"platform": "web",
		"framework": "angular",
		"language": "ts",
		"kind": "lib"
	},
	"keywords": [
		"actions",
		"angular",
		"cqrs",
		"effects",
		"javascript",
		"js",
		"managed-by-autotool",
		"reactive",
		"rxjs",
		"tinyslice",
		"ts",
		"typescript"
	],
	"author": {
		"email": "alexaegis@gmail.com",
		"name": "AlexAegis",
		"url": "https://www.github.com/AlexAegis"
	},
	"homepage": "https://www.github.com/AlexAegis/tinyslice#readme",
	"repository": "github:AlexAegis/tinyslice",
	"bugs": {
		"url": "https://www.github.com/AlexAegis/tinyslice/issues"
	},
	"type": "module",
	"config": {
		"engine-strict": true
	},
	"scripts": {
		"build": "turbo run build-lib_ --concurrency 16 --cache-dir .cache/turbo --filter @tinyslice/ngx",
		"build-lib_": "vite build",
		"lint:depcheck": "turbo run lint:depcheck_ --concurrency 16 --cache-dir .cache/turbo --filter @tinyslice/ngx",
		"lint:depcheck_": "depcheck",
		"lint:es": "turbo run lint:es_ --concurrency 16 --cache-dir .cache/turbo --filter @tinyslice/ngx",
		"lint:es_": "eslint --max-warnings=0 --fix --no-error-on-unmatched-pattern .",
		"lint:format": "turbo run lint:format_ --concurrency 16 --cache-dir .cache/turbo --filter @tinyslice/ngx",
		"lint:format_": "prettier --check .",
		"lint:md": "turbo run lint:md_ --concurrency 16 --cache-dir .cache/turbo --filter @tinyslice/ngx",
		"lint:md_": "remark --frail --no-stdout --silently-ignore *.md docs/**/*.md",
		"lint:style": "turbo run lint:style_ --concurrency 16 --cache-dir .cache/turbo --filter @tinyslice/ngx",
		"lint:style:css": "turbo run lint:style:css_ --concurrency 16 --cache-dir .cache/turbo --filter @tinyslice/ngx",
		"lint:style:css_": "stylelint --cache true --cache-strategy content --cache-location .cache/stylelintcache-css --allow-empty-input **/*.css",
		"lint:style:html": "turbo run lint:style:html_ --concurrency 16 --cache-dir .cache/turbo --filter @tinyslice/ngx",
		"lint:style:html_": "stylelint --customSyntax=postcss-html --cache true --cache-strategy content --cache-location .cache/stylelintcache-html --allow-empty-input **/*.html ",
		"lint:style:scss": "turbo run lint:style:scss_ --concurrency 16 --cache-dir .cache/turbo --filter @tinyslice/ngx",
		"lint:style:scss_": "stylelint --customSyntax=postcss-scss --cache true --cache-strategy content --cache-location .cache/stylelintcache-scss --allow-empty-input **/*.scss",
		"lint:tsc": "turbo run lint:tsc_ --concurrency 16 --cache-dir .cache/turbo --filter @tinyslice/ngx",
		"lint:tsc_": "tsc --noEmit",
		"publint": "turbo run publint_ --concurrency 16 --cache-dir .cache/turbo --filter @tinyslice/ngx",
		"publint_": "publint dist",
		"_postinstall": "husky install",
		"format": "prettier --write .",
		"ncu": "ncu -u",
		"postpublish": "pinst --enable",
		"prepublish": "pinst --disable",
		"test": "turbo run test_ --concurrency 16 --cache-dir .cache/turbo --filter @tinyslice/ngx",
		"test_": "vitest --passWithNoTests --coverage --run",
		"test:watch": "vitest --passWithNoTests --coverage"
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./readme": "./readme.md"
	},
	"dependencies": {
		"@angular/common": "^16.0.2",
		"@angular/compiler": "^16.0.2",
		"@angular/core": "^16.0.2",
		"@tinyslice/core": "^0.7.0",
		"rxjs": "^7.8.1",
		"tslib": "^2.5.2"
	},
	"devDependencies": {
		"@alexaegis/eslint-config-vitest": "^0.3.0",
		"@alexaegis/stylelint-config": "^0.3.0",
		"@alexaegis/ts": "^0.3.0",
		"@alexaegis/vite": "^0.3.0",
		"@alexaegis/vitest": "^0.3.0",
		"@types/node": "^20.2.1",
		"publint": "^0.1.12",
		"stylelint": "^15.6.2",
		"vite": "^4.3.8",
		"vitest": "^0.31.1"
	}
}
