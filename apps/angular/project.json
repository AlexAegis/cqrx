{
	"$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/next/src/generators/application/schema.json",
	"projectType": "application",
	"sourceRoot": "apps/angular/src",
	"prefix": "tinyslice",
	"targets": {
		"build": {
			"executor": "@angular-devkit/build-angular:browser",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/apps/angular",
				"index": "apps/angular/src/index.html",
				"main": "apps/angular/src/main.ts",
				"polyfills": "apps/angular/src/polyfills.ts",
				"tsConfig": "apps/angular/tsconfig.json",
				"assets": ["apps/angular/src/favicon.ico", "apps/angular/src/assets"],
				"styles": [
					"node_modules/ng-zorro-antd/ng-zorro-antd.min.css",
					"apps/angular/src/styles.css"
				],
				"scripts": []
			},
			"configurations": {
				"production": {
					"budgets": [
						{
							"type": "initial",
							"maximumWarning": "800kb",
							"maximumError": "2mb"
						},
						{
							"type": "anyComponentStyle",
							"maximumWarning": "2kb",
							"maximumError": "4kb"
						}
					],
					"fileReplacements": [
						{
							"replace": "apps/angular/src/environments/environment.ts",
							"with": "apps/angular/src/environments/environment.prod.ts"
						}
					],
					"outputHashing": "all"
				},
				"development": {
					"buildOptimizer": false,
					"optimization": false,
					"vendorChunk": true,
					"extractLicenses": false,
					"sourceMap": true,
					"namedChunks": true
				}
			},
			"defaultConfiguration": "production"
		},
		"serve": {
			"executor": "@angular-devkit/build-angular:dev-server",
			"configurations": {
				"production": {
					"browserTarget": "angular:build:production"
				},
				"development": {
					"browserTarget": "angular:build:development"
				}
			},
			"defaultConfiguration": "development"
		},
		"extract-i18n": {
			"executor": "@angular-devkit/build-angular:extract-i18n",
			"options": {
				"browserTarget": "angular:build"
			}
		},
		"lint": {
			"executor": "@nrwl/linter:eslint",
			"options": {
				"lintFilePatterns": ["apps/angular/**/*.ts", "apps/angular/**/*.html"]
			}
		},
		"test": {
			"executor": "@nrwl/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/apps/angular"],
			"options": {
				"jestConfig": "apps/angular/jest.config.ts",
				"passWithNoTests": true
			}
		}
	},
	"tags": []
}
