{
	"name": "tinyslice-workspace",
	"description": "Reactive events",
	"version": "0.0.1",
	"license": "MIT",
	"author": {
		"email": "alexaegis@gmail.com",
		"name": "AlexAegis",
		"url": "https://www.github.com/AlexAegis"
	},
	"homepage": "https://www.github.com/AlexAegis/tinyslice#readme",
	"repository": "github:AlexAegis/tinyslice",
	"bugs": {
		"url": "https://www.github.com/AlexAegis/tinyslice/issues"
	},
	"keywords": [
		"tinyslice",
		"cqrs",
		"actions",
		"effects",
		"rxjs",
		"reactive",
		"ts",
		"typescript",
		"js",
		"javascript"
	],
	"private": true,
	"config": {
		"engine-strict": true
	},
	"workspaces": [
		"lib/core",
		"lib/devtools-plugin",
		"example/svelte-example"
	],
	"scripts": {
		"start": "npm --workspace example/svelte-example start",
		"format": "prettier --write .",
		"lint:es": "eslint",
		"lint:format": "prettier --check .",
		"test": "jest --passWithNoTests",
		"ncu": "ncu -u",
		"clean": "rimraf node_modules package-lock.json",
		"postinstall": "husky install"
	},
	"dependencies": {
		"tslib": "^2.4.0"
	},
	"devDependencies": {
		"@commitlint/cli": "~17.0.2",
		"@commitlint/config-conventional": "~17.0.2",
		"@types/jest": "~27.5.2",
		"@types/node": "17.0.38",
		"@typescript-eslint/eslint-plugin": "~5.27.0",
		"@typescript-eslint/parser": "~5.27.0",
		"dotenv": "~16.0.1",
		"eslint": "~8.16.0",
		"eslint-config-prettier": "~8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prefer-arrow": "^1.2.3",
		"eslint-plugin-prettier": "~4.0.0",
		"husky": "^8.0.1",
		"jest": "~28.1.0",
		"lint-staged": "~13.0.0",
		"markdownlint": "^0.25.1",
		"markdownlint-cli": "^0.31.1",
		"npm-check-updates": "~13.0.4",
		"pinst": "^3.0.0",
		"prettier": "~2.6.2",
		"rimraf": "^3.0.2",
		"source-map-support": "^0.5.21",
		"ts-node": "10.8.0",
		"tsconfig-paths": "^4.0.0",
		"typescript": "~4.7.2",
		"webpack-bundle-analyzer": "~4.5.0"
	}
}
